# system
mkdir -p /root/${serverHostname}
touch /root/${serverHostname}/secrets.txt

useradd -s /bin/bash -d /home/ubuntu -m -G sudo -p "" ubuntu || true
mkdir -p /home/ubuntu/.ssh
cd /home/ubuntu


# apt
apt-get update
apt-get upgrade -y
apt-get install curl apt-config-auto-update nano secure-delete unattended-upgrades vnstat wget -y


# sshd
ssh-keygen -t ed25519 -a 256 -f /root/${serverHostname}/sshKey -N ""
cat /root/${serverHostname}/sshKey.pub >> /home/ubuntu/.ssh/authorized_keys
srm /root/${serverHostname}/sshKey.pub
