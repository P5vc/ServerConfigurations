source variables

mkdir -p /tmp/bucardo

if [ "$serverGeneration" == "Duplicate" ]
then


if [ -d "/root/secrets" ]
then
	systemctl restart postgresql

	mkdir -p /var/log/bucardo
	touch /var/log/bucardo/log.bucardo

	priveasyuserPass=$(sed -n "1p" "/root/secrets/db0Secrets.txt")

	bucardo add db -p 58762 priveasydbBase dbname=priveasydb port=58762 host=database0.${internalFQDN} user=priveasyuser pass=${priveasyuserPass} conn="sslmode=require"
	bucardo add db -p 58762 priveasydbDuplicate dbname=priveasydb port=58762 host=$(hostname).${internalFQDN} user=priveasyuser pass=${priveasyuserPass} conn="sslmode=require"

	bucardo add all tables db=priveasydbBase relgroup=BaseTables -p 58762

	bucardo add sync fromBase dbs=priveasydbBase,priveasydbDuplicate relgroup=BaseTables conflict_strategy="bucardo_latest" -p 58762

	bucardo start -p 58762
fi

bucardo add all tables db=priveasydbBase relgroup=BaseTables -p 58762

fi
